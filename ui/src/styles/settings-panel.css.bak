/* ===========================================
   Settings Panel - Desktop workbench shell
   =========================================== */

.settings-backdrop {
  position: fixed;
  inset: 0;
  background: color-mix(in srgb, var(--bg) 55%, rgba(0, 0, 0, 0.58));
  backdrop-filter: blur(2px);
  z-index: 900;
  animation: settingsFadeIn 0.18s ease;
}

.settings-panel {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: min(1240px, calc(100vw - 52px));
  height: min(calc(100vh - 72px), 860px);
  z-index: 910;
  display: flex;
  flex-direction: column;
  background:
    radial-gradient(120% 100% at -8% -20%, color-mix(in srgb, var(--info) 7%, transparent), transparent 52%),
    radial-gradient(120% 100% at 116% -8%, color-mix(in srgb, var(--ok) 6%, transparent), transparent 58%),
    var(--panel);
  border: 1px solid color-mix(in srgb, var(--border-strong) 65%, transparent);
  border-radius: var(--radius-xl);
  box-shadow:
    var(--shadow-xl),
    0 0 0 1px color-mix(in srgb, var(--card-highlight) 50%, transparent) inset;
  overflow: hidden;
  animation: settingsSlideIn 0.24s var(--ease-out);
}

.settings-panel__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 18px;
  padding: 18px 22px;
  border-bottom: 1px solid color-mix(in srgb, var(--border) 72%, transparent);
  flex-shrink: 0;
  background: color-mix(in srgb, var(--panel) 74%, transparent);
  backdrop-filter: blur(5px);
}

.settings-panel__header-main {
  min-width: 0;
}

.settings-panel__title {
  margin: 0;
  font-size: 18px;
  font-weight: 650;
  letter-spacing: -0.02em;
  color: var(--text-strong);
}

.settings-panel__subtitle {
  margin: 6px 0 0;
  font-size: 12px;
  line-height: 1.5;
  color: var(--muted);
}

.settings-panel__header-actions {
  display: inline-flex;
  align-items: center;
  gap: 10px;
}

.settings-kbd {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32px;
  height: 24px;
  padding: 0 8px;
  border-radius: 6px;
  border: 1px solid color-mix(in srgb, var(--border-strong) 72%, transparent);
  background: color-mix(in srgb, var(--bg-elevated) 72%, transparent);
  font-family: var(--mono);
  font-size: 11px;
  color: var(--muted);
}

.settings-panel__close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border: none;
  border-radius: var(--radius-md);
  background: transparent;
  color: var(--muted);
  cursor: pointer;
  transition:
    background var(--duration-fast) ease,
    color var(--duration-fast) ease,
    transform var(--duration-fast) ease;
}

.settings-panel__close:hover {
  background: var(--bg-hover);
  color: var(--text);
  transform: scale(1.03);
}

.settings-panel__close svg {
  width: 18px;
  height: 18px;
}

.settings-panel__body {
  display: grid;
  grid-template-columns: 224px 1fr;
  flex: 1;
  min-height: 0;
}

.settings-panel__nav {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 14px;
  border-right: 1px solid color-mix(in srgb, var(--border) 70%, transparent);
  background: color-mix(in srgb, var(--bg-accent) 86%, transparent);
  overflow-y: auto;
}

.settings-nav-item {
  position: relative;
  display: flex;
  align-items: center;
  gap: 10px;
  width: 100%;
  padding: 10px 12px;
  border: none;
  border-radius: var(--radius-md);
  background: transparent;
  color: var(--muted);
  font-size: 13px;
  font-weight: 500;
  text-align: left;
  cursor: pointer;
  transition:
    background var(--duration-fast) ease,
    color var(--duration-fast) ease,
    transform var(--duration-fast) ease;
}

.settings-nav-item::before {
  content: "";
  position: absolute;
  left: -6px;
  top: 8px;
  bottom: 8px;
  width: 2px;
  border-radius: var(--radius-full);
  background: transparent;
}

.settings-nav-item:hover {
  background: color-mix(in srgb, var(--bg-hover) 70%, transparent);
  color: var(--text);
  transform: translateX(1px);
}

.settings-nav-item.active {
  background: color-mix(in srgb, var(--accent-subtle) 84%, transparent);
  color: var(--text-strong);
}

.settings-nav-item.active::before {
  background: var(--accent);
}

.settings-nav-item__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 18px;
  height: 18px;
  opacity: 0.72;
}

.settings-nav-item__icon svg {
  width: 16px;
  height: 16px;
}

.settings-nav-item.active .settings-nav-item__icon {
  opacity: 1;
}

.settings-nav-item__text {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.settings-panel__content {
  overflow-y: auto;
  padding: 22px;
  min-height: 0;
  min-width: 0;
}

/* ===========================================
   Shared settings pages
   =========================================== */

.settings-page {
  display: grid;
  gap: 14px;
}

.settings-page__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16px;
}

.settings-page__header--compact {
  margin-bottom: 2px;
}

.settings-page__title {
  margin: 0;
  font-size: 20px;
  font-weight: 650;
  letter-spacing: -0.02em;
  color: var(--text-strong);
}

.settings-page__desc {
  margin: 8px 0 0;
  max-width: 720px;
  font-size: 13px;
  line-height: 1.6;
  color: var(--muted);
}

.settings-surface {
  border: 1px solid color-mix(in srgb, var(--border) 78%, transparent);
  border-radius: var(--radius-lg);
  padding: 16px;
  background: color-mix(in srgb, var(--card) 86%, transparent);
  box-shadow: var(--shadow-sm);
}

.settings-surface--subtle {
  background: color-mix(in srgb, var(--bg-elevated) 72%, transparent);
}

.settings-surface__head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 14px;
  margin-bottom: 12px;
}

.settings-surface__title {
  font-size: 15px;
  font-weight: 620;
  color: var(--text-strong);
}

.settings-surface__desc {
  margin-top: 4px;
  font-size: 12px;
  color: var(--muted);
}

/* ===========================================
   General page
   =========================================== */

.settings-section__title {
  margin: 0 0 12px;
  font-size: 14px;
  font-weight: 620;
  color: var(--text-strong);
}

.settings-section__title--spaced {
  margin-top: 22px;
}

.settings-section__row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
  padding: 12px 0;
  border-bottom: 1px solid color-mix(in srgb, var(--border) 68%, transparent);
}

.settings-section__row:last-child {
  border-bottom: none;
}

.settings-section__row-info {
  display: grid;
  gap: 4px;
}

.settings-section__row-label {
  font-size: 14px;
  font-weight: 540;
  color: var(--text);
}

.settings-section__row-desc {
  font-size: 12px;
  color: var(--muted);
  line-height: 1.45;
}

.settings-section__row-control {
  flex-shrink: 0;
}

.settings-select {
  min-width: 260px;
  max-width: 340px;
  height: 36px;
  padding: 0 34px 0 12px;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  background: var(--bg-elevated);
  color: var(--text);
  font-size: 13px;
  font-weight: 500;
  outline: none;
  cursor: pointer;
}

.settings-select:hover {
  border-color: var(--border-strong);
}

.settings-select:focus-visible {
  border-color: var(--accent);
  box-shadow: var(--focus-ring);
}

.settings-sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.settings-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 14px;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  background: var(--bg-elevated);
  color: var(--text);
  font-size: 13px;
  font-weight: 500;
  text-decoration: none;
  transition:
    background var(--duration-fast) ease,
    border-color var(--duration-fast) ease,
    transform var(--duration-fast) ease;
}

.settings-link:hover {
  background: var(--bg-hover);
  border-color: var(--border-strong);
  transform: translateY(-1px);
}

.settings-link__icon {
  display: flex;
  align-items: center;
  width: 18px;
  height: 18px;
  color: var(--muted);
}

.settings-link__icon svg {
  width: 18px;
  height: 18px;
}

.settings-link__text {
  flex: 1;
}

.settings-link__external {
  display: flex;
  align-items: center;
  color: var(--muted);
  opacity: 0.65;
}

/* ===========================================
   Logs page
   =========================================== */

.logs-toolbar {
  display: grid;
  gap: 12px;
}

.logs-toolbar__top {
  display: grid;
  grid-template-columns: minmax(240px, 1fr) auto auto;
  gap: 10px;
  align-items: end;
}

.logs-toolbar__search {
  min-width: 0;
}

.logs-toggle {
  height: 38px;
  border: 1px solid color-mix(in srgb, var(--border) 78%, transparent);
  border-radius: var(--radius-md);
  background: color-mix(in srgb, var(--bg-elevated) 80%, transparent);
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 0 10px;
  font-size: 12px;
  color: var(--text);
}

.logs-toggle input {
  margin: 0;
  accent-color: var(--accent);
}

.logs-toggle__label {
  white-space: nowrap;
}

.logs-toolbar__actions {
  display: inline-flex;
  gap: 8px;
}

.logs-level-row {
  gap: 6px;
}

.logs-level-count {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 18px;
  height: 18px;
  padding: 0 4px;
  border-radius: var(--radius-full);
  background: color-mix(in srgb, var(--bg-elevated) 76%, transparent);
  font-size: 11px;
  font-weight: 600;
  color: var(--muted);
}

.logs-summary-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 8px;
}

.logs-summary-card {
  border: 1px solid color-mix(in srgb, var(--border) 78%, transparent);
  border-radius: var(--radius-md);
  background: color-mix(in srgb, var(--bg-elevated) 86%, transparent);
  padding: 10px 12px;
  min-width: 0;
}

.logs-summary-card__label {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  color: var(--muted);
}

.logs-summary-card__value {
  margin-top: 5px;
  font-size: 17px;
  font-weight: 640;
  color: var(--text-strong);
  letter-spacing: -0.02em;
}

.logs-callout {
  margin-top: 10px;
}

.logs-stream-shell {
  padding: 10px;
}

.log-stream--friendly {
  max-height: min(52vh, 560px);
  border: none;
  background: transparent;
  display: grid;
  gap: 8px;
}

.log-row--friendly {
  border: 1px solid color-mix(in srgb, var(--border) 78%, transparent);
  border-radius: var(--radius-md);
  padding: 10px 12px;
  background: color-mix(in srgb, var(--bg-elevated) 90%, transparent);
  display: grid;
  gap: 8px;
}

.log-row--friendly .log-row__meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8px;
}

.log-row--friendly .log-time {
  font-size: 11px;
}

.log-row--friendly .log-level {
  padding: 1px 7px;
  font-size: 10px;
}

.log-row--friendly .log-subsystem {
  font-size: 12px;
  opacity: 0.92;
}

.log-row--friendly .log-message {
  font-size: 13px;
  line-height: 1.55;
  font-family: var(--font-body);
  color: var(--text);
}

.log-row__raw {
  border-top: 1px dashed color-mix(in srgb, var(--border) 72%, transparent);
  padding-top: 8px;
}

.log-row__raw summary {
  font-size: 12px;
  color: var(--muted);
  cursor: pointer;
}

.logs-empty-state {
  border: 1px dashed color-mix(in srgb, var(--border) 80%, transparent);
  border-radius: var(--radius-md);
  padding: 18px;
  text-align: center;
  color: var(--muted);
}

.logs-empty-state__title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text);
}

.logs-empty-state__desc {
  margin-top: 5px;
  font-size: 12px;
  line-height: 1.5;
}

/* ===========================================
   Debug page
   =========================================== */

.debug-metrics-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 8px;
}

.debug-metric-card {
  border: 1px solid color-mix(in srgb, var(--border) 78%, transparent);
  border-radius: var(--radius-md);
  background: color-mix(in srgb, var(--bg-elevated) 88%, transparent);
  padding: 10px 12px;
}

.debug-metric-card__label {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  color: var(--muted);
}

.debug-metric-card__value {
  margin-top: 5px;
  font-size: 16px;
  font-weight: 640;
  color: var(--text-strong);
}

.debug-metric-card__value--ok {
  color: var(--ok);
}

.debug-metric-card__value--warn {
  color: var(--warn);
}

.debug-metric-card__value--danger {
  color: var(--danger);
}

.debug-metric-card__value--muted {
  color: var(--muted);
}

.debug-callout {
  margin-top: 2px;
}

.debug-snapshot-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10px;
}

.debug-snapshot-card {
  border: 1px solid color-mix(in srgb, var(--border) 76%, transparent);
  border-radius: var(--radius-md);
  background: color-mix(in srgb, var(--bg-elevated) 88%, transparent);
  overflow: hidden;
}

.debug-snapshot-card__summary {
  list-style: none;
  cursor: pointer;
  padding: 12px;
}

.debug-snapshot-card__summary::-webkit-details-marker {
  display: none;
}

.debug-snapshot-card__title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-strong);
}

.debug-snapshot-card__sub {
  margin-top: 4px;
  font-size: 12px;
  color: var(--muted);
}

.debug-snapshot-card__body {
  padding: 0 12px 12px;
}

.debug-nested-details {
  margin-top: 8px;
}

.debug-nested-details summary {
  font-size: 12px;
  color: var(--muted);
  cursor: pointer;
}

.debug-events-shell {
  margin-top: 2px;
}

.debug-events-list {
  display: grid;
  gap: 8px;
}

.debug-event-item {
  border: 1px solid color-mix(in srgb, var(--border) 74%, transparent);
  border-radius: var(--radius-md);
  background: color-mix(in srgb, var(--bg-elevated) 88%, transparent);
  overflow: hidden;
}

.debug-event-item__summary {
  list-style: none;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  gap: 12px;
  align-items: center;
  padding: 10px 12px;
}

.debug-event-item__summary::-webkit-details-marker {
  display: none;
}

.debug-event-item__main {
  min-width: 0;
}

.debug-event-item__event {
  font-size: 13px;
  font-weight: 560;
  color: var(--text-strong);
  overflow-wrap: anywhere;
}

.debug-event-item__time {
  margin-top: 3px;
  font-size: 11px;
  color: var(--muted);
}

.debug-event-item__hint {
  font-size: 11px;
  color: var(--muted);
  white-space: nowrap;
}

.debug-event-item .code-block {
  margin: 0 12px 12px;
}

.debug-advanced-shell,
.debug-models-shell {
  margin-top: 2px;
}

.debug-advanced-shell__summary,
.debug-models-shell__summary {
  list-style: none;
  cursor: pointer;
}

.debug-advanced-shell__summary::-webkit-details-marker,
.debug-models-shell__summary::-webkit-details-marker {
  display: none;
}

.debug-advanced-shell__body {
  margin-top: 6px;
}

/* ===========================================
   Config integration in settings panel
   =========================================== */

.settings-panel__content .config-layout {
  margin: -22px;
  height: calc(100% + 44px);
  min-height: 0;
  max-height: none;
  border-radius: 0;
  border: none;
  border-left: none;
}

/* ===========================================
   Animations
   =========================================== */

@keyframes settingsFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes settingsSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -48%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}

/* ===========================================
   Responsive
   =========================================== */

@media (max-width: 980px) {
  .settings-panel {
    width: calc(100vw - 24px);
    height: calc(100vh - 24px);
  }

  .settings-panel__body {
    grid-template-columns: 1fr;
  }

  .settings-panel__nav {
    flex-direction: row;
    overflow-x: auto;
    padding: 8px 12px;
    border-right: none;
    border-bottom: 1px solid var(--border);
    gap: 4px;
  }

  .settings-nav-item {
    flex: 0 0 auto;
    padding: 8px 14px;
  }

  .settings-nav-item::before {
    display: none;
  }

  .settings-panel__content {
    padding: 16px;
  }

  .settings-panel__content .config-layout {
    margin: -16px;
    height: calc(100% + 32px);
  }

  .logs-toolbar__top {
    grid-template-columns: 1fr;
    align-items: stretch;
  }

  .logs-toolbar__actions {
    justify-content: flex-start;
  }

  .logs-summary-grid,
  .debug-metrics-grid,
  .debug-snapshot-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

@media (max-width: 640px) {
  .settings-panel__header {
    padding: 14px 16px;
  }

  .settings-panel__subtitle {
    display: none;
  }

  .settings-select {
    min-width: 0;
    width: min(100%, 280px);
  }

  .settings-section__row {
    flex-direction: column;
    align-items: flex-start;
  }

  .settings-section__row-control {
    width: 100%;
  }

  .logs-summary-grid,
  .debug-metrics-grid,
  .debug-snapshot-grid {
    grid-template-columns: 1fr;
  }
}
