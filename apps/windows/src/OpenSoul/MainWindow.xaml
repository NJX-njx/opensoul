<Window x:Class="OpenSoul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenSoul (Windows Preview)"
        Height="760"
        Width="1180"
        MinHeight="640"
        MinWidth="920">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Gateway Connection" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Mode:" />
                <ComboBox x:Name="ModeComboBox"
                          Grid.Row="0"
                          Grid.Column="1"
                          Margin="0,0,16,8"
                          Width="180"
                          SelectionChanged="ModeComboBox_SelectionChanged">
                    <ComboBoxItem Tag="local" IsSelected="True">Local</ComboBoxItem>
                    <ComboBoxItem Tag="remote">Remote</ComboBoxItem>
                </ComboBox>

                <TextBlock Grid.Row="0" Grid.Column="2" Margin="0,0,8,8" VerticalAlignment="Center" Text="Session:" />
                <TextBox x:Name="SessionKeyTextBox"
                         Grid.Row="0"
                         Grid.Column="3"
                         Margin="0,0,0,8"
                         VerticalAlignment="Center"
                         Text="main"
                         ToolTip="Session key for chat.send" />

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Remote URL:" />
                <TextBox x:Name="RemoteUrlTextBox"
                         Grid.Row="1"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Margin="0,0,0,8"
                         Text="ws://127.0.0.1:3000"
                         ToolTip="Supports ws://, wss://, http://, https://" />

                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Token:" />
                <TextBox x:Name="RemoteTokenTextBox"
                         Grid.Row="2"
                         Grid.Column="1"
                         Margin="0,0,16,8"
                         ToolTip="Optional. Leave empty to use environment variables." />

                <TextBlock Grid.Row="2" Grid.Column="2" Margin="0,0,8,8" VerticalAlignment="Center" Text="Password:" />
                <PasswordBox x:Name="RemotePasswordBox"
                             Grid.Row="2"
                             Grid.Column="3"
                             Margin="0,0,0,8"
                             ToolTip="Optional. Leave empty to use environment variables." />

                <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center" Text="Device token:" />
                <TextBox x:Name="RemoteDeviceTokenTextBox"
                         Grid.Row="3"
                         Grid.Column="1"
                         Margin="0,0,16,0"
                         ToolTip="Optional. Device token auth." />

                <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ConnectButton" Width="96" Margin="0,0,8,0" Click="ConnectButton_Click">Connect</Button>
                    <Button x:Name="DisconnectButton" Width="96" Margin="0,0,8,0" Click="DisconnectButton_Click">Disconnect</Button>
                    <Button x:Name="HealthButton" Width="96" Click="HealthButton_Click">Health</Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DockPanel Grid.Row="1" Margin="0,12,0,12" LastChildFill="True">
            <Button x:Name="ClearLogsButton"
                    DockPanel.Dock="Right"
                    Width="100"
                    Height="28"
                    Margin="8,0,0,0"
                    Click="ClearLogsButton_Click">Clear Logs</Button>

            <Border BorderBrush="#FFCBD5E1" BorderThickness="1" CornerRadius="4" Padding="8,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Connection state:" FontWeight="SemiBold" />
                    <TextBlock x:Name="StateTextBlock" Margin="8,0,0,0" Text="Disconnected" />
                    <TextBlock Text=" | " Margin="8,0,8,0" />
                    <TextBlock x:Name="StatusTextBlock" Text="Ready" />
                </StackPanel>
            </Border>
        </DockPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Chat Timeline" Padding="8">
                <ListBox x:Name="ChatListBox" FontFamily="Consolas" FontSize="13" />
            </GroupBox>

            <GroupBox Grid.Column="2" Header="Gateway Events" Padding="8">
                <ListBox x:Name="EventListBox" FontFamily="Consolas" FontSize="13" />
            </GroupBox>
        </Grid>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageTextBox"
                     Grid.Column="0"
                     Height="84"
                     Margin="0,0,8,0"
                     VerticalContentAlignment="Top"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     KeyDown="MessageTextBox_KeyDown"
                     ToolTip="Type a message and send with chat.send (Ctrl+Enter)" />

            <Button x:Name="SendButton" Grid.Column="1" Width="104" Height="84" Click="SendButton_Click">Send</Button>
        </Grid>
    </Grid>
</Window>
