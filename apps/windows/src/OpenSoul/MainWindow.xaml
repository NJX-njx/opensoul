<Window x:Class="OpenSoul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="OpenSoul"
        Height="860"
        Width="1360"
        MinHeight="600"
        MinWidth="480"
        Icon="Resources/opensoul.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        Background="{DynamicResource ShellBgBrush}"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded">

    <!-- Custom window chrome for borderless but resizable window -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="36"
                      ResizeBorderThickness="6"
                      GlassFrameThickness="1"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Titlebar button base style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource MutedBrush}" />
            <Setter Property="FontFamily" Value="Segoe Fluent Icons, Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Cursor" Value="Arrow" />
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background"
                                        Value="{DynamicResource WindowButtonHoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button (red on hover) -->
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource TitleBarButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background"
                                        Value="{DynamicResource CloseButtonHoverBrush}" />
                                <Setter Property="Foreground"
                                        Value="{DynamicResource CloseButtonHoverForeground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Connection status pill style -->
        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="10,3" />
            <Setter Property="Background" Value="{DynamicResource PanelStrongBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Custom titlebar -->
            <RowDefinition Height="36" />
            <!-- WebView2 content -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- System tray icon (non-visual, placed in Grid but not in layout) -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        IconSource="Resources/tray-idle.ico"
                        ToolTipText="OpenSoul - Disconnected"
                        TrayLeftMouseDown="TrayIcon_LeftClick"
                        TrayMouseDoubleClick="TrayIcon_DoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="TrayMenuStatusItem"
                              Header="OpenSoul"
                              FontWeight="SemiBold"
                              IsEnabled="False" />
                    <Separator />

                    <!-- Quick navigation -->
                    <MenuItem x:Name="TrayMenuDashboard"
                              Header="Open Dashboard"
                              InputGestureText="Ctrl+D"
                              Click="TrayMenuDashboard_Click" />
                    <MenuItem x:Name="TrayMenuChat"
                              Header="Open Chat"
                              InputGestureText="Ctrl+Shift+C"
                              Click="TrayMenuChat_Click" />
                    <MenuItem Header="Open Devices"
                              Click="TrayMenuDevices_Click" />
                    <Separator />

                    <!-- Gateway controls -->
                    <MenuItem x:Name="TrayMenuGatewayStatus"
                              Header="Gateway: Disconnected"
                              IsEnabled="False" />
                    <MenuItem x:Name="TrayMenuGatewayRestart"
                              Header="Restart Gateway"
                              Click="TrayMenuGatewayRestart_Click" />
                    <MenuItem x:Name="TrayMenuGatewayStop"
                              Header="Stop Gateway"
                              Click="TrayMenuGatewayStop_Click" />
                    <Separator />

                    <!-- Quick actions submenu -->
                    <MenuItem Header="Quick Actions">
                        <MenuItem Header="New Chat Session"
                                  Click="TrayMenuNewChat_Click" />
                        <MenuItem Header="Show Shortcuts"
                                  InputGestureText="Ctrl+/"
                                  Click="TrayMenuShortcuts_Click" />
                        <Separator />
                        <MenuItem Header="Toggle Theme"
                                  Click="ThemeToggleButton_Click" />
                    </MenuItem>
                    <Separator />

                    <!-- Settings and meta -->
                    <MenuItem x:Name="TrayMenuSettings"
                              Header="Settings..."
                              InputGestureText="Ctrl+,"
                              Click="TrayMenuSettings_Click" />
                    <MenuItem x:Name="TrayMenuUpdate"
                              Header="Update &amp; Restart"
                              Visibility="Collapsed"
                              FontWeight="SemiBold"
                              Click="TrayMenuUpdate_Click" />
                    <MenuItem x:Name="TrayMenuAbout"
                              Header="About OpenSoul"
                              Click="TrayMenuAbout_Click" />
                    <Separator />
                    <MenuItem x:Name="TrayMenuQuit"
                              Header="Quit"
                              InputGestureText="Ctrl+Q"
                              Click="TrayMenuQuit_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <!-- ═══════════ CUSTOM TITLEBAR ═══════════ -->
        <Grid Grid.Row="0" Background="{DynamicResource TitlebarBrush}">
            <Grid.ColumnDefinitions>
                <!-- App icon + brand -->
                <ColumnDefinition Width="Auto" />
                <!-- Spacer (draggable) -->
                <ColumnDefinition Width="*" />
                <!-- Connection status pill -->
                <ColumnDefinition Width="Auto" />
                <!-- Spacer (draggable) -->
                <ColumnDefinition Width="*" />
                <!-- Window controls -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- App brand -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0">
                <Image Source="Resources/opensoul.ico"
                       Width="16" Height="16"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="0,0,8,0" />
                <TextBlock Text="OpenSoul"
                           FontSize="13"
                           FontWeight="SemiBold"
                           FontFamily="Segoe UI Variable Text, Segoe UI"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Connection status pill (centered) -->
            <Border Grid.Column="2" Style="{StaticResource StatusPill}">
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="StatusDot"
                             Width="8" Height="8"
                             Fill="{DynamicResource MutedBrush}"
                             Margin="0,0,6,0"
                             VerticalAlignment="Center" />
                    <TextBlock x:Name="StatusText"
                               Text="Disconnected"
                               FontSize="12"
                               FontFamily="Segoe UI Variable Small, Segoe UI"
                               Foreground="{DynamicResource MutedBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Window controls: minimize, maximize, close -->
            <StackPanel Grid.Column="4" Orientation="Horizontal">
                <Button Style="{StaticResource TitleBarButton}"
                        Click="MinimizeButton_Click"
                        ToolTip="Minimize">
                    <TextBlock Text="&#xE921;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                               FontSize="10" />
                </Button>
                <Button x:Name="MaximizeButton"
                        Style="{StaticResource TitleBarButton}"
                        Click="MaximizeButton_Click"
                        ToolTip="Maximize">
                    <TextBlock x:Name="MaximizeIcon" Text="&#xE922;"
                               FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                               FontSize="10" />
                </Button>
                <Button Style="{StaticResource CloseButton}"
                        Click="CloseButton_Click"
                        ToolTip="Close">
                    <TextBlock Text="&#xE8BB;" FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                               FontSize="10" />
                </Button>
            </StackPanel>

            <!-- Bottom border line -->
            <Border Grid.Column="0" Grid.ColumnSpan="5"
                    Height="1"
                    VerticalAlignment="Bottom"
                    Background="{DynamicResource BorderBrush}" />
        </Grid>

        <!-- ═══════════ MAIN CONTENT: WebView2 ═══════════ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8" />
            </Grid.RowDefinitions>

            <!-- Left resize border: pass hit test to WindowChrome for horizontal resize -->
            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                    Background="Transparent"
                    Cursor="SizeWE"
                    WindowChrome.IsHitTestVisibleInChrome="True" />

            <!-- Right resize border: pass hit test to WindowChrome for horizontal resize -->
            <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                    Background="Transparent"
                    Cursor="SizeWE"
                    WindowChrome.IsHitTestVisibleInChrome="True" />

            <!-- Content Area (Center) -->
            <Grid Grid.Column="1" Grid.Row="0">
                <!-- Splash overlay (shown while WebView2 loads, fades out when ready) -->
                <Grid x:Name="SplashOverlay"
                  ZIndex="10"
                  Background="{DynamicResource ShellBgBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- App icon with gentle scale-in animation -->
                    <Image x:Name="SplashIcon"
                           Source="Resources/opensoul.ico"
                           Width="56" Height="56"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <ScaleTransform x:Name="SplashIconScale" ScaleX="0.8" ScaleY="0.8" />
                        </Image.RenderTransform>
                    </Image>
                    <!-- Brand name -->
                    <TextBlock x:Name="SplashBrand"
                               Text="OpenSoul"
                               FontSize="22"
                               FontWeight="SemiBold"
                               FontFamily="Segoe UI Variable Display, Segoe UI"
                               Foreground="{DynamicResource TextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               Opacity="0" />
                    <!-- Loading status text -->
                    <TextBlock x:Name="SplashStatus"
                               Text="Initializing..."
                               FontSize="12"
                               FontFamily="Segoe UI Variable Small, Segoe UI"
                               Foreground="{DynamicResource MutedBrush}"
                               HorizontalAlignment="Center"
                               Opacity="0" />
                </StackPanel>
            </Grid>

            <!-- WebView2 control hosting Control UI -->
            <wv2:WebView2 x:Name="WebView"
                          Visibility="Visible"
                          DefaultBackgroundColor="Transparent"
                          AllowDrop="True"
                          Drop="WebView_Drop"
                          DragOver="WebView_DragOver" />

            <!-- WebView2 unavailable fallback -->
            <Grid x:Name="WebView2Fallback"
                  Visibility="Collapsed"
                  Background="{DynamicResource ShellBgBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="480">
                    <TextBlock Text="WebView2 Runtime Required"
                               FontSize="20"
                               FontWeight="SemiBold"
                               FontFamily="Segoe UI Variable Display, Segoe UI"
                               Foreground="{DynamicResource TextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12" />
                    <TextBlock Text="OpenSoul needs the Microsoft Edge WebView2 Runtime to display its interface. Please install it and restart the application."
                               FontSize="14"
                               FontFamily="Segoe UI Variable Text, Segoe UI"
                               Foreground="{DynamicResource MutedBrush}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,24" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="DownloadWebView2Button"
                                Content="Download WebView2 Runtime"
                                Padding="16,8"
                                FontSize="14"
                                Foreground="White"
                                Background="{DynamicResource AccentBrush}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="DownloadWebView2Button_Click"
                                Margin="0,0,12,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Quit"
                                Padding="16,8"
                                FontSize="14"
                                Foreground="{DynamicResource TextBrush}"
                                Background="{DynamicResource PanelStrongBrush}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="TrayMenuQuit_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
